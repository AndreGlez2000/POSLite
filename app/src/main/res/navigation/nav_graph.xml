<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/categoriesFragment">

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.example.testlite.CategoriesFragment"
        android:label="Categorías"
        tools:layout="@layout/fragment_categories">
        <action
            android:id="@+id/action_categoriesFragment_to_productsFragment"
            app:destination="@id/productsFragment" />
        <action
            android:id="@+id/action_global_to_addCategoryProductFragment"
            app:destination="@id/addCategory_ProductFragment" />
    </fragment>

    <fragment
        android:id="@+id/productsFragment"
        android:name="com.example.testlite.ProductsFragment"
        android:label="Productos"
        tools:layout="@layout/fragment_products">
        <argument
            android:name="categoryId"
            app:argType="string" />
        <action
            android:id="@+id/action_global_to_addCategoryProductFragment"
            app:destination="@id/addCategory_ProductFragment" />
    </fragment>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.testlite.CartFragment"
        android:label="Carrito"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/action_cartFragment_to_barcodeScannerFragment"
            app:destination="@id/barcodeScannerFragment" />
    </fragment>

    <fragment
        android:id="@+id/barcodeScannerFragment"
        android:name="com.example.testlite.BarcodeScannerFragment"
        android:label="Escáner"
        tools:layout="@layout/fragment_barcode_scanner">
        <action
            android:id="@+id/action_barcodeScannerFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
        <argument
            android:name="isPickMode"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>

    <dialog
        android:id="@+id/barcodeScannerPick"
        android:name="com.example.testlite.BarcodeScannerFragment"
        android:label="Escáner"
        tools:layout="@layout/fragment_barcode_scanner">
        <argument
            android:name="isPickMode"
            app:argType="boolean"
            android:defaultValue="true" />
    </dialog>

    <fragment
        android:id="@+id/receiptFragment"
        android:name="com.example.testlite.ReceiptFragment"
        android:label="Recibos"
        tools:layout="@layout/fragment_receipt" />

    <dialog
        android:id="@+id/addCategory_ProductFragment"
        android:name="com.example.testlite.AddCategory_ProductFragment"
        android:label="Agregar Item"
        tools:layout="@layout/fragment_add_category__product">
        <argument
            android:name="mode"
            app:argType="string" />
        <argument
            android:name="categoryId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_addCategoryProductFragment_to_barcodeScannerPick"
            app:destination="@id/barcodeScannerPick" />
    </dialog>

    <!-- Acciones globales para navegar desde cualquier lugar -->
    <action
        android:id="@+id/action_global_to_cartFragment"
        app:destination="@id/cartFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="false" />

    <action
        android:id="@+id/action_global_to_barcodeScannerFragment"
        app:destination="@id/barcodeScannerFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="false" />

</navigation>
